<!--pages/home/home.wxml-->
<!-- 1、小程序的数据绑定：{{}} -> Mustache -->
<view>Hello {{name}}</view>
<view>我的年龄：{{age}}</view>

<!-- 2、列表展示：wx:for -->
<view wx:for='{{students}}'>{{item.name}} - {{item.id}}</view>

<!-- 3、事件监听 -->
<view>当前计数：{{count}}</view>
<button size="mini" bindtap="increase">+</button>
<button size="mini" bindtap="decrease">-</button>